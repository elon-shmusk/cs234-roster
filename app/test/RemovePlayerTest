package app.test;

import app.src.Remove_Player;
import org.junit.Test;
import static org.junit.Assert.*;

public class RemovePlayerTest {

    @Test
    public void testDialogInstantiation() {
        Remove_Player removePlayerDialog = new Remove_Player(null);
        assertNotNull("Remove Player dialog not instantiated", removePlayerDialog);
        assertTrue("Remove Player dialog is not visible", removePlayerDialog.isVisible());
    }

    @Test
    public void testCheckBoxPresence() {
        Remove_Player removePlayerDialog = new Remove_Player(null);
        assertNotNull("Player 1 checkbox not found", removePlayerDialog.player1);
        assertNotNull("Player 2 checkbox not found", removePlayerDialog.player2);
        assertNotNull("Player 3 checkbox not found", removePlayerDialog.player3);
        assertNotNull("Player 4 checkbox not found", removePlayerDialog.player4);
        assertNotNull("Player 5 checkbox not found", removePlayerDialog.player5);
        assertNotNull("Player 6 checkbox not found", removePlayerDialog.player6);
        assertNotNull("Player 7 checkbox not found", removePlayerDialog.player7);
        assertNotNull("Player 8 checkbox not found", removePlayerDialog.player8);
        assertNotNull("Player 9 checkbox not found", removePlayerDialog.player9);
        assertNotNull("Player 10 checkbox not found", removePlayerDialog.player10);
        assertNotNull("Player 11 checkbox not found", removePlayerDialog.player11);
        assertNotNull("Player 12 checkbox not found", removePlayerDialog.player12);
        assertNotNull("Player 13 checkbox not found", removePlayerDialog.player13);
        assertNotNull("Player 14 checkbox not found", removePlayerDialog.player14);
        assertNotNull("Player 15 checkbox not found", removePlayerDialog.player15);
        assertNotNull("Player 16 checkbox not found", removePlayerDialog.player16);
    }
}
